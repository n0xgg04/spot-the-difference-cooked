<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.ltm.game.client.controllers.LeaderboardController"
           minWidth="1280" minHeight="720"
           style="-fx-background-color: #010A13;">
    
    <!-- Riot-style dark gradient background -->
    <Pane style="-fx-background-color: linear-gradient(to bottom right, rgba(1,10,19,0.98), rgba(5,25,40,0.95), rgba(10,35,50,0.92));"/>
    
    <BorderPane style="-fx-background-color: transparent;">
        <!-- Top Bar - Riot style -->
        <top>
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 25px 35px; -fx-background-color: rgba(0,0,0,0.3);">
                <Button text="â—„ TRá»ž Láº I"
                        onAction="#handleBack"
                        style="-fx-font-size: 13px; 
                               -fx-font-weight: bold;
                               -fx-padding: 10px 22px; 
                               -fx-background-color: rgba(30,35,40,0.8);
                               -fx-text-fill: #C8AA6E; 
                               -fx-border-color: #785A28;
                               -fx-border-width: 1.5px;
                               -fx-background-radius: 2px;
                               -fx-border-radius: 2px; 
                               -fx-cursor: hand;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.7), 8, 0.6, 0, 3);"/>
                
                <!-- Decorative line -->
                <Region HBox.hgrow="ALWAYS" 
                        style="-fx-background-color: linear-gradient(to right, #785A28, transparent); 
                               -fx-pref-height: 2px;"/>
            </HBox>
        </top>
        
        <center>
            <VBox alignment="TOP_CENTER" spacing="30" style="-fx-padding: 20px 40px 40px 40px;">
                
                <!-- Title Section - Riot style -->
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: rgba(0,0,0,0.4); 
                             -fx-border-color: #785A28; 
                             -fx-border-width: 2px 0px 2px 0px;
                             -fx-padding: 20px 80px;">
                    
                    <Label text="ðŸ†"
                           style="-fx-font-size: 56px;
                                  -fx-effect: dropshadow(gaussian, #C8AA6E, 20, 0.8, 0, 0);"/>
                    
                    <Label text="Báº¢NG Xáº¾P Háº NG"
                           style="-fx-font-size: 48px; 
                                  -fx-font-weight: bold; 
                                  -fx-text-fill: #F0E6D2;
                                  -fx-effect: dropshadow(gaussian, rgba(200,170,110,0.9), 18, 0.9, 0, 2);"/>
                    
                    <Label text="TOP PLAYERS"
                           style="-fx-font-size: 14px; 
                                  -fx-text-fill: #C8AA6E; 
                                  -fx-font-weight: 600;
                                  -fx-padding: 5px 0 0 0;"/>
                </VBox>
                
                <!-- Leaderboard Table -->
                <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                    <ScrollPane fitToWidth="false"
                                style="-fx-background-color: transparent; 
                                       -fx-background: transparent;"
                                hbarPolicy="NEVER"
                                vbarPolicy="AS_NEEDED">
                        <VBox fx:id="entriesContainer"
                              spacing="8"
                              alignment="TOP_CENTER"
                              maxWidth="1000">
                            <padding>
                                <Insets top="10" right="20" bottom="20" left="20"/>
                            </padding>
                        </VBox>
                    </ScrollPane>
                </HBox>
            </VBox>
        </center>
    </BorderPane>
    
</StackPane>
