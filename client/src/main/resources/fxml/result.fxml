<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.ltm.game.client.controllers.ResultController"
           minWidth="1280" minHeight="720"
           style="-fx-background-color: #010A13;">
    
    <!-- Riot-style dark gradient background -->
    <Pane style="-fx-background-color: linear-gradient(to bottom right, rgba(1,10,19,0.98), rgba(5,25,40,0.95), rgba(10,35,50,0.92));"/>
    
    <BorderPane style="-fx-background-color: transparent;">
        <!-- Remove top bar with back button -->
        
        <center>
            <VBox alignment="CENTER" spacing="35" style="-fx-padding: 30px;">
                
                <!-- Victory/Defeat Banner - Riot style -->
                <VBox alignment="CENTER" spacing="8" 
                      style="-fx-background-color: rgba(0,0,0,0.4); 
                             -fx-border-color: #785A28; 
                             -fx-border-width: 2px 0px 2px 0px;
                             -fx-padding: 20px 80px;">
                    
                    <Label fx:id="resultIcon"
                           style="-fx-font-size: 64px;
                                  -fx-effect: dropshadow(gaussian, #C8AA6E, 20, 0.8, 0, 0);"/>
                    
                    <Label fx:id="resultTitle"
                           style="-fx-font-size: 56px; 
                                  -fx-font-weight: bold; 
                                  -fx-text-fill: #F0E6D2;
                                  -fx-effect: dropshadow(gaussian, rgba(200,170,110,0.9), 18, 0.9, 0, 2);"/>
                    
                    <Label fx:id="reasonLabel"
                           style="-fx-font-size: 16px; 
                                  -fx-text-fill: #C8AA6E; 
                                  -fx-font-weight: 600;
                                  -fx-padding: 8px 0 0 0;"/>
                </VBox>
                
                <!-- Score Cards - Riot hexagonal style -->
                <HBox alignment="CENTER" spacing="60" style="-fx-padding: 20px 0;">
                    
                    <!-- Your Score Card -->
                    <VBox alignment="CENTER" spacing="15"
                          style="-fx-background-color: linear-gradient(to bottom, rgba(15,25,35,0.95), rgba(5,15,25,0.95));
                                 -fx-border-color: linear-gradient(to bottom, #785A28, #463714);
                                 -fx-border-width: 3px;
                                 -fx-padding: 30px 45px;
                                 -fx-background-radius: 3px;
                                 -fx-border-radius: 3px;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 20, 0.8, 0, 8);">
                        
                        <Label text="BẠN"
                               style="-fx-font-size: 14px; 
                                      -fx-font-weight: bold; 
                                      -fx-text-fill: #785A28;"/>
                        
                        <Label fx:id="yourNameLabel"
                               style="-fx-font-size: 24px; 
                                      -fx-font-weight: bold; 
                                      -fx-text-fill: #F0E6D2;"/>
                        
                        <!-- Divider -->
                        <Region style="-fx-background-color: #785A28; -fx-pref-width: 100px; -fx-pref-height: 2px;"/>
                        
                        <Label fx:id="yourScoreLabel"
                               style="-fx-font-size: 76px; 
                                      -fx-font-weight: bold; 
                                      -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.6), 12, 0.8, 0, 0);"/>
                        
                        <Label text="ĐIỂM"
                               style="-fx-font-size: 13px; 
                                      -fx-font-weight: bold;
                                      -fx-text-fill: rgba(240,230,210,0.6);"/>
                    </VBox>
                    
                    <!-- VS Separator with Riot styling -->
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="⚔"
                               style="-fx-font-size: 48px;
                                      -fx-text-fill: #C8AA6E;
                                      -fx-effect: dropshadow(gaussian, #785A28, 15, 0.8, 0, 0);"/>
                        <Label text="VS"
                               style="-fx-font-size: 28px; 
                                      -fx-font-weight: bold; 
                                      -fx-text-fill: #C8AA6E;
                                      -fx-effect: dropshadow(gaussian, rgba(120,90,40,0.8), 10, 0.7, 0, 0);"/>
                    </VBox>
                    
                    <!-- Opponent Score Card -->
                    <VBox alignment="CENTER" spacing="15"
                          style="-fx-background-color: linear-gradient(to bottom, rgba(15,25,35,0.95), rgba(5,15,25,0.95));
                                 -fx-border-color: linear-gradient(to bottom, #785A28, #463714);
                                 -fx-border-width: 3px;
                                 -fx-padding: 30px 45px;
                                 -fx-background-radius: 3px;
                                 -fx-border-radius: 3px;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 20, 0.8, 0, 8);">
                        
                        <Label text="ĐỐI THỦ"
                               style="-fx-font-size: 14px; 
                                      -fx-font-weight: bold; 
                                      -fx-text-fill: #785A28;"/>
                        
                        <Label fx:id="oppNameLabel"
                               style="-fx-font-size: 24px; 
                                      -fx-font-weight: bold; 
                                      -fx-text-fill: #F0E6D2;"/>
                        
                        <!-- Divider -->
                        <Region style="-fx-background-color: #785A28; -fx-pref-width: 100px; -fx-pref-height: 2px;"/>
                        
                        <Label fx:id="oppScoreLabel"
                               style="-fx-font-size: 76px; 
                                      -fx-font-weight: bold; 
                                      -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.6), 12, 0.8, 0, 0);"/>
                        
                        <Label text="ĐIỂM"
                               style="-fx-font-size: 13px; 
                                      -fx-font-weight: bold;
                                      -fx-text-fill: rgba(240,230,210,0.6);"/>
                    </VBox>
                </HBox>
                
                <!-- Action Buttons - Riot style -->
                <HBox alignment="CENTER" spacing="30" fillHeight="false" style="-fx-padding: 25px 0 0 0;">
                    
                    <Button fx:id="rematchButton"
                            text="TIẾP TỤC"
                            onAction="#handleContinue"
                            minWidth="240"
                            maxWidth="240"
                            alignment="CENTER"
                            style="-fx-font-size: 15px; 
                                   -fx-font-weight: bold;
                                   -fx-padding: 16px 40px; 
                                   -fx-background-color: linear-gradient(to bottom, #0AC8B9, #0397AB);
                                   -fx-text-fill: #0A1428; 
                                   -fx-border-color: #0AC8B9;
                                   -fx-border-width: 2px;
                                   -fx-background-radius: 2px;
                                   -fx-border-radius: 2px; 
                                   -fx-cursor: hand;
                                   -fx-effect: dropshadow(gaussian, rgba(10,200,185,0.6), 15, 0.8, 0, 5);
                                   -fx-alignment: center;"/>
                    
                    <Button fx:id="leaderboardButton"
                            text="BẢNG XẾP HẠNG"
                            onAction="#handleViewLeaderboard"
                            minWidth="240"
                            maxWidth="240"
                            alignment="CENTER"
                            style="-fx-font-size: 15px; 
                                   -fx-font-weight: bold;
                                   -fx-padding: 16px 40px; 
                                   -fx-background-color: rgba(30,35,40,0.9);
                                   -fx-text-fill: #C8AA6E; 
                                   -fx-border-color: #785A28;
                                   -fx-border-width: 2px;
                                   -fx-background-radius: 2px;
                                   -fx-border-radius: 2px; 
                                   -fx-cursor: hand;
                                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 12, 0.7, 0, 4);
                                   -fx-alignment: center;"/>
                </HBox>
            </VBox>
        </center>
    </BorderPane>
    
</StackPane>

