<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           styleClass="lol-queue-root" prefWidth="550" prefHeight="550">

    <!-- Dark Background with blur effect -->
    <StackPane styleClass="lol-dark-background"/>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="0">
        
        <!-- Circular Animation Container -->
        <StackPane prefWidth="400" prefHeight="400" styleClass="lol-circle-container">
            
            <!-- Outer Gold Ring (Rotating slowly) -->
            <Circle fx:id="outerRing" radius="180" strokeWidth="4" 
                    fill="transparent" styleClass="lol-ring-gold"/>

            <!-- Inner Cyan Ring (Rotating opposite) -->
            <Circle fx:id="innerRing" radius="160" strokeWidth="6" 
                    fill="transparent" styleClass="lol-ring-cyan"/>

            <!-- Dark Center Circle -->
            <Circle radius="140" styleClass="lol-center-dark"/>

            <!-- Center Content -->
            <VBox alignment="CENTER" spacing="12">
                <!-- Hextech Icon -->
                <Label text="⬡" styleClass="lol-hextech-icon"/>
                
                <!-- Title -->
                <Label fx:id="titleLabel" text="TÌM THẤY TRẬN" styleClass="lol-title"/>
                
                <!-- Subtitle -->
                <Label fx:id="queueTimerLabel" text="Úc Gia Hủ • Thường • 5v5" styleClass="lol-subtitle"/>
            </VBox>
        </StackPane>

        <!-- Cancel Button (when searching) -->
        <VBox fx:id="cancelButtonContainer" alignment="CENTER" spacing="15" styleClass="lol-buttons-container" visible="true" managed="true">
            <padding>
                <Insets top="20" bottom="10"/>
            </padding>
            
            <Button fx:id="cancelQueueButton" text="HỦY TÌM KIẾM" 
                    styleClass="lol-button-decline" 
                    prefWidth="200" prefHeight="45"/>
        </VBox>

        <!-- Action Buttons -->
        <VBox fx:id="actionButtons" alignment="CENTER" spacing="15" styleClass="lol-buttons-container" visible="false" managed="false">
            <padding>
                <Insets top="20" bottom="10"/>
            </padding>
            
            <!-- Accept Button (Cyan) -->
            <Button fx:id="acceptButton" text="ĐỒNG Ý!" 
                    styleClass="lol-button-accept" 
                    prefWidth="200" prefHeight="45"/>
            
            <!-- Decline Button (Gold) -->
            <Button fx:id="declineButton" text="TỪ CHỐI" 
                    styleClass="lol-button-decline" 
                    prefWidth="200" prefHeight="45"/>
        </VBox>

    </VBox>

</StackPane>
